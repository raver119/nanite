{
  "name": "nanite",
  "description": "Primitive and tiny PubSub implementation",
  "version": "1.0.0",
  "keywords": [
    "pubsub",
    "publisher",
    "subscriber"
  ],
  "author": "raver119",
  "license": "Apache-2.0",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "test": "jest --ci=true --watch",
    "build:tsc": "tsc --build tsconfig.json",
    "build:rollup": "rollup -c",
    "test:ci": "jest --ci=true"
  },
  "dependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "rollup": "^2.54.0",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-typescript3": "^1.1.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  }
}
